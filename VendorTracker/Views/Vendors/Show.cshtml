@using VendorTracker.Models;

<h1>Vendor Information:</h1>

<h2>---@Model["vendor"].Name---</h2>
<h4>@Model["vendor"].Bio</h4>
<h3>Orders:</h3>
<ol>
@foreach (Order order in @Model["orders"])
{
    <li><a href='/venders/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
} 
</ol>




<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href="/vendors">Return to Vendor List</a></p>
<p><a href="/">Return to Home</a></p>
